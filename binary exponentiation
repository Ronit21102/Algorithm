#include <iostream>
using namespace std;
long long int mod = 1000000007;

int main() {
	// your code goes here
	int t;cin>>t;
	while(t--)
	{
	long long int  a , b;
	cin>>a>>b;
	long long int  res = 1;
	while(b)
	{
	    if(b%2)
	    {
	        res =  (res*a)%mod;
	        --b;
	    }
	    else
	    {
	        a = (a*a)%mod;
	        b/=2;
	    }
	}
	cout<<res<<endl;
	}
	return 0;
}
/*
res   
 1   5.    7 agar odd hai to ek power kam karke result mein daaldo
 5   5.    6 
 5.   25.   3. even hai power to base*base aur power/2
 125   25.   2 odd tha to res*power kia aur base--
 125.  625  1. 
 625*125  625 0
 
 jab power 0 to loop terminate res ki value 625*125
 */
